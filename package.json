{
  "name": "democoin",
  "version": "0.0.2",
  "description": "Democoin, a cryptocurrency demonstration",
  "homepage": "https://github.com/conradoqg/democoin",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/conradoqg/democoin.git"
  },
  "bin": {
    "democoin": "bin/democoin.js"
  },
  "scripts": {
    "start": "node bin/democoin.js",
    "compose:up": "docker-compose up",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc --reporter=lcov --reporter=text --clean node node_modules/mocha/bin/_mocha -u bdd --colors test/",
    "test": "_mocha -u bdd --colors test/",
    "diagrams": "mmdc -i doc/blockchain.mmd -o doc/blockchain.png -b transparent && mmdc -i doc/components.mmd -o doc/components.png -b transparent"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cli-color": "^1.2.0",
    "elliptic": "^6.5.2",
    "es6-error": "^4.1.1",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "pug": "^2.0.0-rc.4",
    "ramda": "^0.26.1",
    "statuses": "^1.5.0",
    "superagent": "^5.1.2",
    "swagger-ui-express": "^4.1.2",
    "threads": "1.0.0-beta.9",
    "timeago.js": "^4.0.1",
    "yargs": "^15.0.2"
  },
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "mermaid.cli": "^0.3.1",
    "mocha": "^6.2.2",
    "mocha-steps": "^1.0.2",
    "nyc": "^14.1.1",
    "supertest": "^4.0.0"
  }
